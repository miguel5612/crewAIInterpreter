# Configuración avanzada para el generador de tests

# Configuración de Gemini AI
GEMINI_API_KEY=tu-clave-de-gemini-aqui
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_OUTPUT_TOKENS=8192

# Configuración de Playwright
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_SCREENSHOT_MODE=only-on-failure
PLAYWRIGHT_VIDEO_MODE=retain-on-failure
PLAYWRIGHT_TRACE_MODE=on-first-retry

# Configuración de reportes
REPORT_FORMAT=html,json,pdf
REPORT_INCLUDE_SCREENSHOTS=true
REPORT_INCLUDE_VIDEOS=false
REPORT_DETAILED_LOGS=true

# Configuración de archivos
WATCH_FOLDER_PATTERN=*.csv
AUTO_CLEANUP_OLD_REPORTS=true
CLEANUP_DAYS_THRESHOLD=7

# Configuración de tests
DEFAULT_TEST_TIMEOUT=60000
PARALLEL_EXECUTION=false
RETRY_FAILED_TESTS=2
GENERATE_MOCK_DATA=true

# Configuración de arquetipos
USE_ARCHEOTYPES=true
ARCHETYPE_MATCHING_THRESHOLD=0.7
CUSTOM_ARCHETYPE_PATH=./custom-arquetipos

# Debug y logging
LOG_LEVEL=info
DEBUG_MODE=false
SAVE_INTERMEDIATE_RESULTS=true
